<p id="notice"><%= notice %></p>

<h1>Trades</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Entry datetime</th>
      <th>Entry price</th>
      <th>Position</th>
      <th>Expected profit</th>
      <th>Expected profit pips</th>
      <th>Loss cut</th>
      <th>Loss cut pips</th>
      <th>Currency pair</th>
      <th>Lot</th>
      <th>Entry memo</th>
      <th>Exit datetime</th>
      <th>Exit price</th>
      <th>Exit memo</th>
      <th>Profit and loss</th>
      <th>Profit and loss pips</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trades.each do |trade| %>
      <tr>
        <td><%= trade.user %></td>
        <td><%= trade.entry_datetime %></td>
        <td><%= trade.entry_price %></td>
        <td><%= trade.position %></td>
        <td><%= trade.expected_profit %></td>
        <td><%= trade.expected_profit_pips %></td>
        <td><%= trade.loss_cut %></td>
        <td><%= trade.loss_cut_pips %></td>
        <td><%= trade.currency_pair %></td>
        <td><%= trade.lot %></td>
        <td><%= trade.entry_memo %></td>
        <td><%= trade.exit_datetime %></td>
        <td><%= trade.exit_price %></td>
        <td><%= trade.exit_memo %></td>
        <td><%= trade.profit_and_loss %></td>
        <td><%= trade.profit_and_loss_pips %></td>
        <td><%= link_to 'Show', trade %></td>
        <td><%= link_to 'Edit', edit_trade_path(trade) %></td>
        <td><%= link_to 'Destroy', trade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

